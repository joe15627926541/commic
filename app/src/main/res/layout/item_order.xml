<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
             />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivCover"
            android:layout_toRightOf="@+id/ivCover"
            android:textColor="@color/black_444444"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ivCover"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格:  "
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_ff0000"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPrice"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/ivCover"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:  "
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow_ffb821"
                android:textSize="11sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llState"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/ivCover"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建于:  "
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCreate"
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llCreate"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/ivCover"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付于:  "
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvPayTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llPay"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/ivCover"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:  "
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_767676"
                android:textSize="11sp" />


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
</LinearLayout>
